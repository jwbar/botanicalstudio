server {
    listen 80;
    server_name botanical.studio www.botanical.studio;

    location / {
        proxy_pass http://127.0.0.1:5002;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    location /static/ {
        alias /var/www/botanical-studio/static/;
    }

    error_log /var/log/nginx/botanical-studio_error.log;
    access_log /var/log/nginx/botanical-studio_access.log;
}
